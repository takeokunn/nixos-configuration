# Search & Fold Options
# ════════════════════════════════════════════════════════════════════════════════
# Search behavior and code folding settings.
# ════════════════════════════════════════════════════════════════════════════════

{
  # Search wraps around file boundaries
  wrapscan = true;

  # Highlight all search matches
  hlsearch = true;

  # Show matches as you type
  incsearch = true;

  # Case-insensitive search by default
  ignorecase = true;

  # Case-sensitive if search contains uppercase (requires ignorecase)
  smartcase = true;

  # Disable code folding (prefer manual navigation)
  foldenable = false;
}
